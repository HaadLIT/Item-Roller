import java.util.Random;

import java.util.Scanner;

import javax.swing.JOptionPane;


public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Random random = new Random();
		// Random = random
	
		String reader;
		// Reads input | User input
		
		boolean rightInput = false;
		// Check if input is correct
		boolean reRoll = true;
		// Check if reRoll has been used
		//boolean checkExit = false;
		// Check if Exit option was ran
		boolean attempt = true;
		// Check if user can roll or reroll
		
		//int caseRoll = 1;
		// Value if input = Roll
		//int caseReRoll = 2;
		// Value if input = ReRoll
		int caseValue = 0;
		// Value
		
		int prize = 0;
		// Random value from 1 - 10

		
		do {
			
			do {
				
			reader = JOptionPane.showInputDialog("Enter: ['1' for roll | '2' to Exit] ");
			
			if ((reader.equals("1"))||(reader.equals("2"))) {
				
				rightInput = true;
			} else {
				System.out.println("Wrong Input");
			}
		
		} while (rightInput != true);
			
			
			if (reader.equals("1")) {
				
				caseValue = 1;
				
			}
			else if (reader.equals("2")) {
				
				caseValue = 2;
				
			}
			
			switch (caseValue) {
			
				case 1:
					
					prize = random.nextInt(15)+1;
					//if (prize == 1) {
						System.out.println("You won | No reroll ====== vvv ======");
						Loot_Table.loot(prize);
						
					//}
					break;
				case 2:
					
					prize = random.nextInt(15)+1;
					//if (prize == 1) {
						System.out.println("You won | With Reroll ====== vvv =======");
						Loot_Table.loot(prize);
					//}
					reRoll = false;
					break;
				default:
					System.out.println("Error:");
					break;
			
			}
			
			if (reRoll == false) {
				
				attempt = false;
				
			}
			
			
		} while (attempt != false);
		
		/*if (prize != 1) {
			
			System.out.println("No loot | you rolled a " + prize);
			
		}*/
		
		
		
	}

}
